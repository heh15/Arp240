import os
import subprocess
import glob
import shutil

directory=raw_input('directory name:')

subprocess.call(['rm','-rf',directory])

os.mkdir(directory)
directory=directory+'/'



for path in glob.glob('results*'):
    shutil.move(path,directory+path)

for path in glob.glob('distribuation*'):
    shutil.move(path,directory+path)

# call(['mv','result*',directory])
# call(['cp','measdata.txt','config.py',directory])
print('moving sucesssfully')

for path in glob.glob(directory+'fig*'):
    shutil.move(path,directory+path)

shutil.copy('config.py',directory+'config.py')
shutil.copy('measdata.txt',directory+'measdata.txt')

subprocess.call(['mv','chains',directory])
